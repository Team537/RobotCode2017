package org.team537.robot.subsystems;

import org.team537.robot.RobotMap;
import org.team537.robot.commands.ClimberDefault;

import com.ctre.CANTalon;
import com.ctre.CANTalon.TalonControlMode;

import edu.wpi.first.wpilibj.command.Subsystem;
import edu.wpi.first.wpilibj.smartdashboard.SmartDashboard;

public class Shooter extends Subsystem {
	private final CANTalon motorSim = new CANTalon(RobotMap.CAN.CLIMBER_SIM);
	
	public Shooter() {
		motorSim.changeControlMode(TalonControlMode.Speed);
		motorSim.enable();
	}

	@Override
	protected void initDefaultCommand() {
		setDefaultCommand(new ClimberDefault());
	}
	
	public void climb(double speed) {
		motorSim.set(speed);
	}

	public void reset() {
		motorSim.enable();
		motorSim.set(0.0);
	}

	public void stop() {
		motorSim.set(0.0);
	}

	public void dashboard() {
		SmartDashboard.putNumber("Climber Speed", motorSim.get());
	}
}
