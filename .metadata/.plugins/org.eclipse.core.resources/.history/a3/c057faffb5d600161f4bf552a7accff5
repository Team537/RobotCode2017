package org.team537.robot;

import org.team537.robot.commands.ClimberAction;
import org.team537.robot.commands.VisionShoot;

import edu.wpi.first.wpilibj.Joystick;
import edu.wpi.first.wpilibj.buttons.JoystickButton;

/**
 * This class is the glue that binds the controls on the physical operator
 * interface to the commands and command groups that allow control of the robot.
 */
public class OI {
	public final Joystick joystickPrimary;
	public final Joystick secondaryPrimary;
	
	public OI() {
		joystickPrimary = new Joystick(RobotMap.Driver.PRIMARY_PORT);
		secondaryPrimary = new Joystick(RobotMap.Driver.SECONDARY_PORT);

		new JoystickButton(secondaryPrimary, RobotMap.JoystickKeys.X).whileHeld(new ClimberAction(true));
		new JoystickButton(secondaryPrimary, RobotMap.JoystickKeys.Y).whileHeld(new ClimberAction(false));
		
		new JoystickButton(secondaryPrimary, RobotMap.JoystickKeys.A).whileHeld(new VisionShoot());

	}
}
